// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  pseudo String
  email String @unique
  password String
  prefs Prefs[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Prefs {
  id Int @id @default(autoincrement())
  userId Int
  theme String?
  images Boolean?
  audio Boolean?
  helpLevel Int?
  user User @relation(fields: [userId], references: [id])
}

model Cinema {
  id Int @id @default(autoincrement())
  name String
  address1 String
  address2 String?
  city String
  postalCode String
  email String?
  phone String?
  gps String?
  description String?
  audio String?
  accessibilities CinemaAccessibility[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductionHouse {
  id Int @id @default(autoincrement())
  name String
  address1 String
  address2 String?
  city String
  postalCode String
  email String?
  phone String?
  webSite String?
  gps String?
  description String?
  audio String?
  accessibilities ProductionHousesAccessibility[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CinemaAccessibility {
  id Int @id @default(autoincrement())
  cinemaId Int
  accessibilityId Int
  cinema Cinema @relation(fields: [cinemaId], references: [id], onDelete: Cascade)
  accessibility Accessibility @relation(fields: [accessibilityId], references: [id], onDelete: Cascade)
}

model ProductionHousesAccessibility {
  id Int @id @default(autoincrement())
  productionHouseId Int
  accessibilityId Int
  productionHouse ProductionHouse @relation(fields: [productionHouseId], references: [id], onDelete: Cascade)
  accessibility Accessibility @relation(fields: [accessibilityId], references: [id], onDelete: Cascade)
}

model Accessibility {
  id Int @id @default(autoincrement())
  name String
  description String
  audio String
  picto String
  cinemas CinemaAccessibility[]
  productionHouses ProductionHousesAccessibility[]
}